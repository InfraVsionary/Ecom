# =========================
# Core Django settings
# =========================
DEBUG=True
SECRET_KEY=replace_with_a_long_random_secret_key

# Comma-separated hostnames/IPs your app should accept
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,172.16.123.140

# =========================
# Database
# =========================
# Persist SQLite into /data volume (Docker Compose handles this)
SQLITE_PATH=/data/db.sqlite3

# =========================
# Static & Media
# =========================
# Collectstatic destination (already mounted in container)
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media
MEDIA_URL=/media/

# =========================
# Email (configure with Gmail or another SMTP)
# =========================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password_here
